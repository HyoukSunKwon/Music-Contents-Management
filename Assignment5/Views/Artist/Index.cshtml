@model IEnumerable<Assignment5.Models.ViewModels.Artist.ArtistBaseViewModel>

@{
    ViewBag.Title = "Artist List";
}

<h2>Artist List</h2>

<p>
    @if (User.IsInRole("Executive"))
    {
        @Html.ActionLink("Create New", "Create")    
    }
    
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UrlArtist)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BirthOrStartDate)
        </th>


        <th>
            @Html.DisplayNameFor(model => model.Genre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <img src="@Html.Raw(item.UrlArtist)" height="100" width="100">
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BirthOrStartDate)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Genre)
        </td>
        <td>
            @if (User.IsInRole("Executive"))
            {
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            }
            |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |

            @if (User.IsInRole("Executive"))
            {
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            }
        </td>
    </tr>
}

</table>
