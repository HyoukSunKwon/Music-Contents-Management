@model Assignment5.Models.ViewModels.Album.AlbumBaseViewModel

@{
    ViewBag.Title = "Details";
}

<h2>Details -@Model.Name</h2>

<div>
    <h4>Album With Details</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
            <hr />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.ReleaseDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ReleaseDate)
            <hr />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.UrlAlbum)
        </dt>

        <dd>
            <img src="@Html.Raw(Model.UrlAlbum)" height="200">
            <hr />
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Genre)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Genre)
            <hr />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Depiction)
        </dt>

        <dd>
            <div class="panel panel-default panel-body">
                @Html.Raw(Model.Depiction)
            </div>
        </dd>
    </dl>
</div>
<p>
    @Html.ActionLink("Back to List", "Index") 
    |
    @if (User.IsInRole("Coordinator"))
    {
        @Html.ActionLink("Edit", "Edit", new { id = Model.Id })
    }
    |
    @if (User.IsInRole("Clerk"))
    {
        @Html.ActionLink("Add Track", "AddTrack", new { id = Model.Id })
    }
</p>
